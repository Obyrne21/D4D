<%- include('../partials/header'); -%>
<%- include('../partials/menu') %>
<body>
  <main>
    <center><h2 style="padding: 2%;">Search CTAM</h2></center>
    <div class="">
      <div class="container-fluid" style="padding: 2%; ">
        <form class="" action="/filter" method="post">
          <div class="row">
            <div class="col-3">

            </div>
            <div class="col-5">
              <input class="form-control" type="text" name="filter_name" placeholder="Filter by Last Name">
            </div>
            <div class="col-1">
              <input class="btn btn-primary" type="submit" name="Filter" value = "Filter"/>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="container">
    <table class = "table"> 
      <% if (items) {
        var table = '<tr><th>PID</th><th>First Name</th><th>Last Name</th><th>MID</th><th>Rank</th><th>Available</th><th>Location</th><th>Unit</th><th>Superior ID</th></tr>';
    
        items.forEach(i => {
          table = table + "<tr><td>" + i.pers_id +"</td>";
          table = table + "<td>" + i.pers_first_name + "</td>";
          table = table + "<td>" + i.pers_last_name + "</td>";
          table = table + "<td>" + i.pers_military_id + "</td>";
          table = table + "<td>" + i.pers_rank + "</td>";
          table = table + "<td>" + i.pers_available + "</td>";
          table = table + "<td>" + i.pers_location + "</td>";
          table = table + "<td>" + i.pers_unit + "</td>";
          table = table + "<td>" + i.pers_comm_off_id + "</td></tr>";
        });
       } %>
       <%- table %>
    </table>
  </div>
  </main>
<%- include('../partials/footer'); -%>

